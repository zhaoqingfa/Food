<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_shopping_item_height"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        >
        <TextView
            android:id="@+id/mtv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mll_money"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/no_shop_name"
            android:textColor="@color/color333333"
            android:textSize="@dimen/common_text_size_medium"
            />

        <LinearLayout
            android:id="@+id/mll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <com.zqf.food.common.widgets.ShopSelectView
                android:id="@+id/mssv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.zqf.food.common.widgets.ShopSelectView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/mll_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mll_select"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/mtv_original_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_5dp"
                android:textColor="@color/colorFF4081"
                android:textSize="@dimen/common_text_size_small_x"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="@string/money_mark"
                android:textColor="@color/colorFF4081"
                android:textSize="@dimen/common_text_size_small_x"
                />
            <TextView
                android:id="@+id/mtv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/colorFF4081"
                android:textSize="@dimen/common_text_size_medium"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
